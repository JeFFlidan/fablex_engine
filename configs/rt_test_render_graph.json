{
    "RenderPasses": [
        {
            "Name": "SwapChainPass",
            "Type": "GRAPHICS",
            "RenderTargets": [
                {
                    "ColorClearValue": [0.1, 0.1, 0.1, 1.0]
                }
            ],
            "InputTextures": [
                "RTColorOutput"
            ],
            "Pipeline": {
                "Name": "SwapChainPipeline",
                "Shaders": [
                    {
                        "Type": "VERTEX",
                        "Path": "output_plane_vs.hlsl"
                    },
                    {
                        "Type": "FRAGMENT",
                        "Path": "output_plane_fs.hlsl"
                    }
                ]
            }
        },
        {
            "Name": "RTTestPass",
            "Type": "GRAPHICS",
            "OutputStorageTextures": [
                "RTColorOutput"
            ],
            "InputTextures": [
                "RNGSeed"
            ],
            "Pipeline": {
                "Name": "RTTestPipeline",
                "Shaders": [
                    {
                        "Type": "RAY_GENERATION",
                        "Path": "ray_tracing/ray_tracing_main_lib.hlsl",
                        "EntryPoint": "raygen"
                    },
                    {
                        "Type": "RAY_MISS",
                        "Path": "ray_tracing/ray_tracing_main_lib.hlsl",
                        "EntryPoint": "miss"
                    },
                    {
                        "Type": "RAY_CLOSEST_HIT",
                        "Path": "ray_tracing/ray_tracing_main_lib.hlsl",
                        "EntryPoint": "closest_hit"
                    }
                ]
            }
        },
        {
            "Name": "RNGSeedGenerationPass",
            "Type": "ASYNC_COMPUTE",
            "OutputStorageTextures": [
                "RNGSeed"
            ],
            "Pipeline": {
                "Name": "RNGSeedGenerationPipeline",
                "Shaders": [
                    {
                        "Path": "rng_seed_generation_cs.hlsl",
                        "Type": "COMPUTE"
                    }
                ]
            }
        }
    ],
    "RenderTextures": [
        {
            "Name": "RTColorOutput",
            "Format": "R8G8B8A8_UNORM"
        },
        {
            "Name": "RNGSeed",
            "Format": "R8G8B8A8_UINT",
            "CrossFrameRead": true
        }
    ],
    "PushConstants": [
        {
            "Name": "RayTracingPushConstants",
            "Resources": [
                {
                    "Name": "RTColorOutput",
                    "Write": true
                }
            ]
        },
        {
            "Name": "SwapChainPushConstants",
            "Resources": [
                {
                    "Name": "RTColorOutput"
                }
            ]
        },
        {
            "Name": "RNGSeedGenerationPushConstants",
            "Resources": [
                {
                    "Name": "RNGSeed",
                    "Write": true
                }
            ]
        }
    ]
