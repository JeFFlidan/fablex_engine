{
    "RenderPasses": [
        {
            "Name": "SwapChainPass",
            "Type": "GRAPHICS",
            "RenderTargets": [
                {
                    "ColorClearValue": [0.1, 0.1, 0.1, 1.0]
                }
            ],
            "InputTextures": [
                "ModulatedColor",
                "MotionVector"
            ],
            "Pipeline": {
                "Name": "SwapChainPipeline",
                "Shaders": [
                    {
                        "Type": "VERTEX",
                        "Path": "output_plane_vs.hlsl"
                    },
                    {
                        "Type": "FRAGMENT",
                        "Path": "output_plane_fs.hlsl"
                    }
                ]
            }
        },
        {
            "Name": "PathTracingPass",
            "Type": "GRAPHICS",
            "OutputStorageTextures": [
                "MotionVector",
                "DepthNormal",
                "Albedo",
                "Emission",
                "ReprojectedIllumination",
                "Moments",
                "HistoryLength"
            ],
            "Pipeline": {
                "Name": "PathTracingPipeline",
                "Shaders": [
                    {
                        "Type": "RAY_GENERATION",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "raygen"
                    },
                    {
                        "Type": "RAY_MISS",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "miss_primary"
                    },
                    {
                        "Type": "RAY_MISS",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "miss_secondary"
                    },
                    {
                        "Type": "RAY_MISS",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "miss_shadow"
                    },
                    {
                        "Type": "RAY_CLOSEST_HIT",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "closest_hit_primary"
                    },
                    {
                        "Type": "RAY_CLOSEST_HIT",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "closest_hit_secondary"
                    },
                    {
                        "Type": "RAY_CLOSEST_HIT",
                        "Path": "ray_tracing/path_tracing_lib.hlsl",
                        "EntryPoint": "closest_hit_shadow"
                    }
                ]
            }
        },
        {
            "Name": "SVGFFilterMomentsPass",
            "Type": "ASYNC_COMPUTE",
            "OutputStorageTextures": [
                "FilteredIllumination"
            ],
            "InputTextures": [
                "ReprojectedIllumination",
                "Moments",
                "HistoryLength",
                "DepthNormal"
            ],
            "Pipeline": {
                "Name": "SVGFFilterPipeline",
                "Shaders": [
                    {
                        "Type": "COMPUTE",
                        "Path": "ray_tracing/svgf_filter_moments_cs.hlsl"
                    }
                ]
            }
        },
        {
            "Name": "SVGFAtrousPass",
            "Type": "ASYNC_COMPUTE",
            "OutputStorageTextures": [
                "FinalIllumination"
            ],
            "InputTextures": [
                "Albedo",
                "FilteredIllumination",
                "HistoryLength",
                "DepthNormal"
            ],
            "Pipeline": {
                "Name": "SVGFAtrousPipeline",
                "Shaders": [
                    {
                        "Type": "COMPUTE",
                        "Path": "ray_tracing/svgf_atrous_cs.hlsl"
                    }
                ]
            }
        },
        {
            "Name": "SVGFFinalModulatePass",
            "Type": "ASYNC_COMPUTE",
            "OutputStorageTextures": [
                "ModulatedColor"
            ],
            "InputTextures": [
                "Albedo",
                "Emission",
                "FinalIllumination"
            ],
            "Pipeline": {
                "Name": "SVGFFinalModulatePipeline",
                "Shaders": [
                    {
                        "Type": "COMPUTE",
                        "Path": "ray_tracing/svgf_final_modulate_cs.hlsl"
                    }
                ]
            }
        }
    ],
    "RenderTextures": [
        {
            "Name": "MotionVector",
            "Format": "R16G16_SFLOAT"
        },
        {
            "Name": "Albedo",
            "Format": "R8G8B8A8_UNORM"
        },
        {
            "Name": "Emission",
            "Format": "R16G16B16A16_SFLOAT"
        },
        {
            "Name": "DepthNormal",
            "Format": "R32G32B32A32_SFLOAT",
            "CrossFrameRead": true
        },
        {
            "Name": "ReprojectedIllumination",
            "Format": "R32G32B32A32_SFLOAT"
        },
        {
            "Name": "Moments",
            "Format": "R32G32_SFLOAT",
            "CrossFrameRead": true
        },
        {
            "Name": "HistoryLength",
            "Format": "R32_SFLOAT",
            "CrossFrameRead": true
        },
        {
            "Name": "FilteredIllumination",
            "Format": "R32G32B32A32_SFLOAT"
        },
        {
            "Name": "FinalIllumination",
            "Format": "R32G32B32A32_SFLOAT"
        },
        {
            "Name": "ModulatedColor",
            "Format": "R32G32B32A32_SFLOAT"
        }
    ],
    "PushConstants": [
        {
            "Name": "PathTracingPushConstants",
            "Resources": [
                {
                    "Name": "MotionVector",
                    "Write": true
                },
                {
                    "Name": "Albedo",
                    "Write": true
                },
                {
                    "Name": "Emission",
                    "Write": true
                },
                {
                    "Name": "DepthNormal",
                    "Write": true
                },
                {
                    "Name": "DepthNormal",
                    "PreviousFrame": true
                },
                {
                    "Name": "ReprojectedIllumination",
                    "Write": true
                },
                {
                    "Name": "Moments",
                    "Write": true
                },
                {
                    "Name": "HistoryLength",
                    "Write": true
                },
                {
                    "Name": "HistoryLength",
                    "PreviousFrame": true
                }
            ]
        },
        {
            "Name": "SVGFFilterMomentsPushConstants",
            "Resources": [
                {
                    "Name": "FilteredIllumination",
                    "Write": true
                },
                {
                    "Name": "ReprojectedIllumination"
                },
                {
                    "Name": "Moments"
                },
                {
                    "Name": "HistoryLength"
                },
                {
                    "Name": "DepthNormal"
                }
            ]
        },
        {
            "Name": "SVGFAtrousPushConstants",
            "Resources": [
                {
                    "Name": "FinalIllumination",
                    "Write": true
                },
                {
                    "Name": "Albedo"
                },
                {
                    "Name": "FilteredIllumination"
                },
                {
                    "Name": "HistoryLength"
                },
                {
                    "Name": "DepthNormal"
                }
            ]
        },
        {
            "Name": "SVGFFinalModulatePushConstants",
            "Resources": [
                {
                    "Name": "ModulatedColor",
                    "Write": true
                },
                {
                    "Name": "FinalIllumination"
                },
                {
                    "Name": "Albedo"
                },
                {
                    "Name": "Emission"
                }
            ]
        },
        {
            "Name": "SwapChainPushConstants",
            "Resources": [
                {
                    "Name": "ModulatedColor"
                }
            ]
        }
    ]
}