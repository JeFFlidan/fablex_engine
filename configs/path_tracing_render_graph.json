{
    "RenderPasses": [
        {
            "Name": "SwapChainPass",
            "Type": "GRAPHICS",
            "RenderTargets": [
                {
                    "ColorClearValue": [0.1, 0.1, 0.1, 1.0]
                }
            ],
            "InputTextures": [
                "ModulatedColor",
                "MotionVector"
            ],
            "Pipeline": {
                "Name": "SwapChainPipeline",
                "Vertex": "output_plane_vs.hlsl",
                "Fragment": "output_plane_fs.hlsl"
            }
        },
        {
            "Name": "PathTracingPass",
            "Type": "GRAPHICS",
            "OutputStorageTextures": [
                "MotionVector",
                "DepthNormal",
                "Albedo",
                "Emission",
                "ReprojectedIllumination",
                "Moments",
                "HistoryLength"
            ],
            "Pipeline": {
                "Name": "PathTracingPipeline",
                "ShaderLib": {
                    "Path": "ray_tracing/path_tracing_lib.hlsl",
                    "Raygen": ["raygen"],
                    "Miss": ["miss_primary", "miss_secondary", "miss_shadow"],
                    "ClosestHit": ["closest_hit_primary", "closest_hit_secondary", "closest_hit_shadow"]
                }
            }
        },
        {
            "Name": "SVGFFilterMomentsPass",
            "Type": "COMPUTE",
            "OutputStorageTextures": [
                "FilteredIllumination"
            ],
            "InputTextures": [
                "ReprojectedIllumination",
                "Moments",
                "HistoryLength",
                "DepthNormal"
            ],
            "Pipeline": {
                "Name": "SVGFFilterPipeline",
                "Compute": "ray_tracing/svgf_filter_moments_cs.hlsl"
            }
        },
        {
            "Name": "SVGFAtrousPass",
            "Type": "COMPUTE",
            "OutputStorageTextures": [
                "FinalIllumination"
            ],
            "InputTextures": [
                "Albedo",
                "FilteredIllumination",
                "HistoryLength",
                "DepthNormal"
            ],
            "Pipeline": {
                "Name": "SVGFAtrousPipeline",
                "Compute": "ray_tracing/svgf_atrous_cs.hlsl"
            }
        },
        {
            "Name": "SVGFFinalModulatePass",
            "Type": "COMPUTE",
            "OutputStorageTextures": [
                "ModulatedColor"
            ],
            "InputTextures": [
                "Albedo",
                "Emission",
                "FinalIllumination"
            ],
            "Pipeline": {
                "Name": "SVGFFinalModulatePipeline",
                "Compute": "ray_tracing/svgf_final_modulate_cs.hlsl"
            }
        }
    ],
    "RenderTextures": [
        {
            "Name": "MotionVector",
            "Format": "R16G16_SFLOAT"
        },
        {
            "Name": "Albedo",
            "Format": "R8G8B8A8_UNORM"
        },
        {
            "Name": "Emission",
            "Format": "R16G16B16A16_SFLOAT"
        },
        {
            "Name": "DepthNormal",
            "Format": "R32G32B32A32_SFLOAT",
            "Flags": ["CrossFrameRead"]
        },
        {
            "Name": "ReprojectedIllumination",
            "Format": "R32G32B32A32_SFLOAT"
        },
        {
            "Name": "Moments",
            "Format": "R32G32_SFLOAT",
            "Flags": ["CrossFrameRead"]
        },
        {
            "Name": "HistoryLength",
            "Format": "R32_SFLOAT",
            "Flags": ["CrossFrameRead"]
        },
        {
            "Name": "FilteredIllumination",
            "Format": "R32G32B32A32_SFLOAT"
        },
        {
            "Name": "FinalIllumination",
            "Format": "R32G32B32A32_SFLOAT"
        },
        {
            "Name": "ModulatedColor",
            "Format": "R32G32B32A32_SFLOAT"
        }
    ],
    "PushConstants": [
        {
            "Name": "PathTracingPushConstants",
            "Resources": [
                {
                    "Name": "MotionVector",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "Albedo",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "Emission",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "DepthNormal",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "DepthNormal",
                    "Flags": ["PreviousFrame"]
                },
                {
                    "Name": "ReprojectedIllumination",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "Moments",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "HistoryLength",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "HistoryLength",
                    "Flags": ["PreviousFrame"]
                }
            ]
        },
        {
            "Name": "SVGFFilterMomentsPushConstants",
            "Resources": [
                {
                    "Name": "FilteredIllumination",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "ReprojectedIllumination"
                },
                {
                    "Name": "Moments"
                },
                {
                    "Name": "HistoryLength"
                },
                {
                    "Name": "DepthNormal"
                }
            ]
        },
        {
            "Name": "SVGFAtrousPushConstants",
            "Resources": [
                {
                    "Name": "FinalIllumination",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "Albedo"
                },
                {
                    "Name": "FilteredIllumination"
                },
                {
                    "Name": "HistoryLength"
                },
                {
                    "Name": "DepthNormal"
                }
            ]
        },
        {
            "Name": "SVGFFinalModulatePushConstants",
            "Resources": [
                {
                    "Name": "ModulatedColor",
                    "Flags": ["Writable"]
                },
                {
                    "Name": "FinalIllumination"
                },
                {
                    "Name": "Albedo"
                },
                {
                    "Name": "Emission"
                }
            ]
        },
        {
            "Name": "SwapChainPushConstants",
            "Resources": [
                {
                    "Name": "ModulatedColor"
                }
            ]
        }
    ]
}